{
  "version": 4,
  "include": [
    "base.json"
  ],
  "configurePresets": [
    {
      "name": "android.armv8",
      "inherits": "base",
      "toolchainFile": "$env{ARIEO_BUILDENV_PACKAGE_INSTALL_FOLDER}/conan/host/android.armv8/conan_toolchain.cmake",
      "architecture": 
      {
        "value": "armv8",
        "strategy": "external"
      },
      "environment": {
        "CLANG_FOR_CODEGEN": "$env{DEVCRAFT_WORKSPACE}/llvm/llvm-21/$env{DEVCRAFT_HOST_TRIPLE}/bin/clang++"
      },
      "cacheVariables":
      {
        "ARIEO_HOST_OS": "android",
        "TARGET_TRIPLE": "aarch64-linux-android35",
        "CMAKE_PREFIX_PATH": {
          "type": "PATH",
          "value": "$env{ARIEO_THIRDPARTIES_PACKAGE_INSTALL_FOLDER}/conan/android.armv8;$env{ARIEO_THIRDPARTIES_PACKAGE_INSTALL_FOLDER}/gradle/android.armv8"
        }
      }
    }
  ]
}
